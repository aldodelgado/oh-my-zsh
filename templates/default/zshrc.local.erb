# Tmux
alias tmux="TERM=screen-256color-bce tmux"

# Rails
alias groutes='rake routes | grep $@'
alias remove_all_gems='for i in `gem list --no-versions`; do gem uninstall -aIx $i; done'
#alias remove_all_gems='gem list | cut -d" " -f1 | xargs gem uninstall -aIx'
alias rspec='nocorrect rspec'
alias sc="rails console"
alias spec='nocorrect spec'
alias spec='spec -c'
alias ss="rails server -b 0.0.0.0"

# Git
alias bottle="git add . && git stash"
alias gaa="git add ."
alias gap='git add -p'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdh='git diff HEAD'
alias gg='git log --decorate --stat --graph --pretty=format:"%d %Cgreen%h%Creset (%ar - %Cred%an%Creset), %s%n"'
alias git_reset_all='git reset --hard HEAD'
alias gl='git pull'
alias glod='git log --oneline --decorate'
alias gm="git merge"
alias gp='git push'
alias gpr='git pull --rebase'
alias gr='git rebase'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias gst='git status'
alias poop="git stash pop"
alias push_github="gp"

# Heroku
alias heroku='nocorrect heroku'

# Misc
alias ..='cd ..'
alias bashrc="vim ~/.bashrc.local"
alias cd..='cd ..'
alias cp='nocorrect cp'         # no spelling correction on cp
alias cucumber='bundle exec cucumber'
alias find_large_files='find . -type f -size +10000k -exec ls -lh {} \;'
alias l.='ls -ld .[^.]*'
alias la="ls -a"
alias ll='ls -lha'
alias lsd='ls -ld *(-/DN)'
alias md='mkdir -p'
alias mkdir='nocorrect mkdir'   # no spelling corection on mkdir
alias mv='nocorrect mv'         # no spelling correction on mv
alias rd='rmdir'
alias t='tig'
alias unhitch='hitch -u'
alias zshrc="vim ~/.zshrc.local"

# Grep
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto --exclude="*~"'
